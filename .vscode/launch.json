{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run electric-pc",
      "command": "pnpm run start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/packages/electric-pc"
    },
    {
      "name": "Run electric-mobile",
      "command": "pnpm run start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/packages/electric-mobile"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
